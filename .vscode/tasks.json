{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "datacollectortools:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build",
				"Run docker-compose up batchdata postgres keycloak"
			],
			"dockerRun": {
				"env": {
					"FLASK_APP": "app.py",
					"FLASK_ENV": "development"
				},
				"volumes": [
					{
						"containerPath": "/app",
						"localPath": "${workspaceFolder}"
					},
					{
						"containerPath": "/Images",
						"localPath": "C:/Users/konst/PythonProjects/Images"
					}
				],
				"ports": [
					{
						"containerPort": 5000,
						"hostPort": 5000
					}
				],
				"remove": true
			},
			"python": {
				"args": [
					"run",
					"--host",
					"0.0.0.0",
					"--port",
					"5000"
				],
				"module": "flask"
			}
		},
		{
			"label": "Run docker-compose up batchdata postgres keycloak",
			"type": "docker-compose",
			"dockerCompose": {
				"up": {
					"detached": true,
					"build": true,
					"services": [
						"batchdata",
						"postgres",
						"keycloak"
					]
				},
				"files": [
					"${workspaceFolder}/docker-compose.debug.yml"
				]
			}
		}
	]
}